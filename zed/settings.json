// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "lsp_document_colors": "inlay",
  "inlay_hints": {
    "show_value_hints": false,
    "enabled": false
  },
  "relative_line_numbers": false,
  "gutter": {
    "line_numbers": true
  },
  "edit_predictions": {
    "mode": "subtle",
    "codestral": {
      "api_url": "https://codestral.mistral.ai",
      "model": "codestral-latest",
      "max_tokens": 300
    }
  },
  "features": {
    "edit_prediction_provider": "codestral" // can we change this?
  },
  "agent": {
    "dock": "right",
    "default_model": {
      "provider": "mistral",
      "model": "devstral-medium-latest"
    },
    "model_parameters": []
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "never"
  },
  "soft_wrap": "bounded",
  "preferred_line_length": 88,
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "New Theme"
  },
  "languages": {
    "Python": {
      "language_servers": ["ruff", "pyright"], // or "basedpyright", "!pyright"
      "format_on_save": "off", // shortcut to format: cmd+shift+i
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": { "name": "ruff" }
        }
      ]
    }
  },
  "language_models": {
    "mistral": {
      "api_url": "https://api.mistral.ai/v1",
      "available_models": [
        {
          "name": "codestral-latest",
          "display_name": "Codestral",
          "max_tokens": 32000,
          "max_output_tokens": 4096,
          "max_completion_tokens": 1024,
          "supports_tools": true,
          "supports_images": false
        }
      ]
    }
  }
}
